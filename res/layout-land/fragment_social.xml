<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/fbButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/fbButton"
        android:layout_marginTop="38dp"
        android:text="Load our Facebook page"
        android:textAlignment="center" />

    <Button
        android:id="@+id/fbButton"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_alignBaseline="@+id/tButton"
        android:layout_alignBottom="@+id/tButton"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/fb_logo"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignLeft="@+id/tButton"
        android:layout_alignStart="@+id/tButton"
        android:text="Load our Twitter page"
        android:textAlignment="center" />

    <Button
        android:id="@+id/tButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/textView"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/fbButton"
        android:layout_toRightOf="@+id/fbButton"
        android:background="@drawable/twitter_icon"
        android:visibility="visible" />

    <WebView
        android:id="@+id/twitterWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ProgressBar
        android:id="@+id/indeterminateBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="212dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/fbButton"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="/seatonvalleycommunitycouncil"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fbButton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/tButton"
        android:layout_alignLeft="@+id/tButton"
        android:layout_alignRight="@+id/tButton"
        android:layout_alignStart="@+id/tButton"
        android:text="@seatonvalleycc"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tButton"
        tools:layout_editor_absoluteX="234dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="News, Activities and Announcements are often on our social media page before they are on our website or app!"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Click on either logo to visit Seaton Valley Community Council social media page."
        android:textAlignment="center" />

</RelativeLayout>