<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_below="@id/secondHalf"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="Welcome to the Seaton Valley Council App!"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/firstHalf"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:textAlignment="center"
        android:layout_weight="1"
        android:text="Click the symbol" />

    <ImageView
        android:id="@+id/menuSymbol"
        android:layout_width="69dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp"
        android:layout_below="@id/firstHalf"
        app:srcCompat="@drawable/menu_symbol" />

    <TextView
        android:id="@+id/secondHalf"
        android:layout_width="164dp"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp"
        android:layout_weight="1"
        android:layout_below="@id/menuSymbol"
        android:textAlignment="center"
        android:text="at the top left of the app to navigate." />



</RelativeLayout>